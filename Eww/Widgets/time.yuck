(defwidget time []
	(overlay
		(box :class "bg hour-${formattime(EWW_TIME, '%H')}")
		(box :class "main" :orientation "v"
			(label :class "hour" :text hour)
			(label :class "minute" :text minute))
		(circular-progress :class "second"
						   :value {second * 5/3}
						   :thickness 5)))

(defwindow time
	:monitor 0
	:geometry (geometry :x 10
						:y 10
						:width 150
						:height 150
						:anchor "top-left")
	:stacking "fg"
	(time ))